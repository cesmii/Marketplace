@using CESMII.Marketplace.Common.Models
@model UserCheckoutModel
@{
    var _fullName = $"{Model.FirstName} {Model.LastName}";
}

<div class="divider-bottom">
    <h2 class="mb-0" >Customer Info:</h2>
    <hr class="compact blue"/>

@if (!string.IsNullOrEmpty(@_fullName))
{
    <p><b>Customer Name:</b> @_fullName</p>
}

    <p><b>Email:</b> @Model.Email</p>

@if (!string.IsNullOrEmpty(@Model.Phone))
{
    <p><b>Phone:</b> @Model.Phone</p>
}

@if (!string.IsNullOrEmpty(@Model.Organization.Name))
{
    <p><b>Organization:</b> @Model.Organization.Name</p>
}
</div>
